@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <title>首页</title>

    <meta name="viewport" content="width=750, user-scalable=no, target-densitydpi=device-dpi" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />
    <meta name="format-detection" content="telephone=no">
    <link href="~/Content/yamaha/css/style.css" rel="stylesheet" type="text/css" />
    <script src="http://code.jquery.com/jquery-1.8.3.min.js"></script>
    <script src="~/Content/yamaha/js/main.js"></script>
    <script>
        $(function () {
            clearCookie("");
            getrandom3();
            var cookiedata = checkCookie();

            var arr3 = cookiedata.split(",");
            $(".startbtn").on("click", function () {
                if (arr3.length > 0) {
                    location.href = "/Yamaha1/" + arr3[0];
                } else {
                    alert("您已答完所有题目");
                    location.href = "/Yamaha1/thank";
                }

            })
        })
    </script>
</head>

<body>
    <div class="indexwrap">
        <a href="/Yamaha1/rule" class="rulebtn"><img src="~/Content/yamaha/image/rulebtn.png"></a>
        <a class="startbtn"><img src="~/Content/yamaha/image/start.png"></a>
    </div>
</body>
</html>

