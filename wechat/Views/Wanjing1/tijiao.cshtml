@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>提交</title>
    <link href="~/Content/Wanjing1/css/style.css" type="text/css" rel="stylesheet" />
    <script>
        function checkform() {
            var tel = document.getElementById("tel").value;
            var reg = /^1[3|4|5|7|8]\d{9}$/;
            if (!(reg.test(tel))) {
                alert("请输入正确手机号码");
                return false;
            }
            return true;
        }
    </script>
</head>
<body>
    <div class="tijiao">
        <form action="/wanjing1/adduser" method="post" onsubmit="return checkform()"> 
            @Html.AntiForgeryToken()
            <input type="text" name="mobile" id="tel"/>
            <input type="submit" value="" />
        </form>
    </div>
</body>
</html>
