@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>谢谢参与</title>
    <meta name="viewport" content="width=750, user-scalable=no, target-densitydpi=device-dpi" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />
    <meta name="format-detection" content="telephone=no">
    <meta name="description" content="">
    <link href="~/Content/Sanyueyishidangblue/css/style.css" rel="stylesheet" />
</head>
<body>
    <div class="thankWrap">
        
    </div>
    <script src="http://apps.bdimg.com/libs/jquery/1.9.1/jquery.min.js"></script>


    @Html.Hidden("appid")
    @Html.Hidden("timestamp")
    @Html.Hidden("noncestr")
    @Html.Hidden("signature")
    @Html.Hidden("openid")
    @Html.Hidden("mediaId")



    <script src="https://res.wx.qq.com/open/js/jweixin-1.0.0.js "></script>
    <script>
        wx.config({
            debug: false, // 开启调试模式,调用的所有api的返回值会在客户端alert出来，若要查看传入的参数，可以在pc端打开，参数信息会通过log打出，仅在pc端时才会打印。
            appId: $("#appid").val(), // 必填，公众号的唯一标识
            timestamp: $("#timestamp").val(), // 必填，生成签名的时间戳
            nonceStr: $("#noncestr").val(), // 必填，生成签名的随机串
            signature: $("#signature").val(),// 必填，签名，见附录1
            jsApiList: ['onMenuShareTimeline', 'onMenuShareAppMessage', 'chooseImage', 'uploadImage'] // 必填，需要使用的JS接口列表，所有JS接口列表见附录2
        });
        wx.ready(function () {

            // config信息验证后会执行ready方法，所有接口调用都必须在config接口获得结果之后，config是一个客户端的异步操作，所以如果需要在页面加载时就调用相关接口，则须把相关接口放在ready函数中调用来确保正确执行。对于用户触发时才调用的接口，则可以直接调用，不需要放在ready函数中。

            wx.onMenuShareTimeline({
                title: '三越伊势丹百货', // 分享标题
                link: 'http://mvc.cjoy.cn/home/s2', // 分享链接
                imgUrl: 'http://mvc.cjoy.cn/img/a1.jpg', // 分享图标
                success: function () {
                    // 用户确认分享后执行的回调函数
                },
                cancel: function () {
                    // 用户取消分享后执行的回调函数
                }
            });

            wx.onMenuShareAppMessage({
                title: '三越伊势丹百货', // 分享标题
                desc: '优惠等着你哦！', // 分享描述
                link: 'http://mvc.cjoy.cn/home/s2', // 分享链接
                imgUrl: 'http://mvc.cjoy.cn/img/a1.jpg', // 分享图标
                type: '', // 分享类型,music、video或link，不填默认为link
                dataUrl: '', // 如果type是music或video，则要提供数据链接，默认为空
                success: function () {
                    // 用户确认分享后执行的回调函数
                },
                cancel: function () {
                    // 用户取消分享后执行的回调函数
                }
            });


        });




    </script>
</body>
</html>
