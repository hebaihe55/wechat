@model IEnumerable<wechat.Models.ActiveUpImg>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="http://libs.baidu.com/jquery/2.0.0/jquery.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <!-- Bootstrap -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
</head>
<body>
   
    <table class="table">
        <tr>
            <th>
               头像
            </th>
            <th>
               昵称
            </th>
            <th>
              小条
            </th>
            <th>
             时间
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
              <img src="@Html.DisplayFor(modelItem => item.WechatUser.headimgurl)" style="width:50px; height:50px;" />
                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WechatUser.nickname)
            </td>
            <td>
                <img src="http://mvc.cjoy.cn/upimg/@Html.DisplayFor(modelItem => item.imgUrl)" style="width:60px; height:60px;" class="showimg" data-toggle="modal" data-target="#myModal" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cctime)
            </td>
           
        </tr>
    }
    
    </table>
    <!-- 模态框（Modal） -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog"
         aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close"
                            data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title" id="myModalLabel">
                        大图
                    </h4>
                </div>
                <div class="modal-body">
                    <img  id="bigimg" class="img-responsive"/>
                </div>
              
            </div><!-- /.modal-content -->
        </div><!-- /.modal -->
        </div>
    <script>
        $(".showimg").click(function () {
            $("#bigimg").attr("src", $(this).attr("src"));
        });
    </script>
</body>
</html>
